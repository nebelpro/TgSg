<manifest
    package="cn.edu.whut.tgsg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/DrawerLayoutTheme">
        </activity>
        <activity
            android:name=".activity.ManuscriptDetailActivity">
        </activity>
        <activity
            android:name=".activity.ForgetPswActivity">
        </activity>
        <activity
            android:name=".activity.RegisterActivity">
        </activity>
        <activity
            android:name=".activity.PersonInfoActivity">
        </activity>
        <activity
            android:name=".activity.PdfActivity">
        </activity>
        <activity
            android:name=".activity.NoticeDetailActivity">
        </activity>
        <activity
            android:name=".activity.DisplaywallDetailActivity">
        </activity>
        <activity
            android:name=".activity.ExamineManuscriptActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.DistributeExpertActivity">
        </activity>
        <activity
            android:name=".activity.ContributeManuscriptActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.ChgPersonInfoActivity">
        </activity>
    </application>
</manifest>
